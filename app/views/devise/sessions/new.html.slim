- provide(:page_title, 'Signin')
.row[style="margin-top:60px;"]
  .col-md-6.col-md-offset-3
    .form-group
      h2
        | Log in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field[style="margin-bottom:20px;"]
          = f.label :email
          = f.email_field :email, autofocus: true, placeholder: "Enter email", class: "form-control"
        .field[style="margin-bottom:20px;"]
          = f.label :password
          = f.password_field :password, autocomplete: "off", placeholder: "Enter password", class: "form-control"
        - if devise_mapping.rememberable?
          .field[style="margin-bottom:20px;"]
            label
              = f.check_box :remember_me
              |  Remember me
        .actions
          = f.submit "Log in", class: "btn btn-warning btn-block"
      = render 'devise/shared/omniauth_providers'
      .devise-links[style="margin-top:20px;"]
        = render "devise/shared/links"
