<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <h2>Log in</h2>
      <div class="buttons" style="margin-top: 20px;">
        <ul>
          <li>
              <div class="btn btn-default btn-facebook">
                <span class="fa fa-facebook"></span>
                Facebook
              </div>
          </li>
          <li>
              <div class="btn btn-default btn-twitter">
                <span class="fa fa-twitter"></span>
                Twitter
              </div>
          </li>
          <li>
              <div class="btn btn-default btn-google">
                <span class="fa fa-google"></span>
                Google
              </div>
          </li>
        </ul>
      </div>

      <hr>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "Enter email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-warning btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
