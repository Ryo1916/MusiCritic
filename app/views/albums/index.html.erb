<% provide(:page_title, 'Albums') %>
<div class="row" style="margin-top:60px;">
  <div class="col-md-6 col-md-offset-3" style="margin-top:40px;">
    <%= render partial: 'search' %>
  </div>
</div>

<hr>

<div class="row no-gutter">
  <div class="albums-list jscroll">
    <% @albums.each do |album| %>
    <div class="col-lg-3 col-sm-6">
      <%= link_to album_path(album.id), class: "portfolio-box" do %>
      <%= image_tag album.image, class: "img-responsive", alt: album.name %>
      <div class="portfolio-box-caption">
        <div class="portfolio-box-caption-content">
          <div class="project-category text-faded">
            <%= album.artist.name %>
          </div>
          <div class="project-name">
            <%= album.name %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
    <%= paginate @albums %>
  </div>
</div>
