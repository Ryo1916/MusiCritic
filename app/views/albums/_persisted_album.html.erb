<div class="<%= current_page?(root_path) ? "col-lg-2 col-sm-4 col-xs-6" : "col-lg-3 col-sm-4 col-xs-12 album" %>">
  <%= link_to album_path(persisted_album.spotify_id), class: "portfolio-box", ontouchstart: "" do %>
    <%= image_tag persisted_album.image, class: "img-responsive", alt: persisted_album.name %>
    <div class="portfolio-box-caption">
      <div class="portfolio-box-caption-content">
        <div class="project-category text-faded">
          <%= persisted_album.artists.map { |artist| artist.name }.join(' / ') %>
        </div>
        <div class="project-name">
          <%= persisted_album.name %>
        </div>
      </div>
    </div>
  <% end %>
</div>
