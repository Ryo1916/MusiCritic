<div class="col-lg-4 col-sm-6 artist">
  <!-- FIXME: クリックされたアーティストのアルバムのみ表示 -->
  <%= link_to artist_path(artist), class: "portfolio-box" do %>
    <div class="image">
      <%= image_tag artist.image, class: "img-responsive", alt: artist.name %>
    </div>
    <div class="portfolio-box-caption">
      <div class="portfolio-box-caption-content">
        <div class="project-category text-faded">
          <h4><%= artist.name %></h4>
        </div>
      </div>
    </div>
  <% end %>
</div>
