<!-- will create search form -->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Artists</h1>
      <%= link_to 'New Artist', new_artist_path, class: "btn btn-success btn-block", style: "color:white;" %>
    </div>
    <div class="search col-md-6 col-md-offset-3">
      <%= render partial: 'search' %>
    </div>
  </div>

  <hr>

  <div class="row no-gutter">
    <% if @artists %>
    <% @artists.each do |artist| %>
      <div class="col-lg-4 col-sm-6">
        <%= link_to albums_path, class: "portfolio-box" do %>
          <% if params[:search] %>
            <%= image_tag artist.images.first["url"], class: "img-responsive", alt: '' %>
          <% else %>
            <%= image_tag artist.artist_image, class: "img-responsive", alt: '' %>
          <% end %>
          <div class="portfolio-box-caption">
            <div class="portfolio-box-caption-content">
              <div class="project-category text-faded">
                <% if params[:search] %>
                  <%= artist.name %>
                <% else %>
                  <%= artist.artist %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
