<% provide(:page_title, 'Artists') %>
<div class="row" style="margin-top:60px;">
  <div class="search col-md-6 col-md-offset-3" style="margin-top:40px;">
    <%= render partial: 'search' %>
  </div>
</div>

<hr>

<div class="row no-gutter">
  <% @artists.each do |artist| %>
    <div class="col-lg-4 col-sm-6">
      <!-- FIXME: クリックされたアーティストのアルバムのみ表示 -->
      <%= link_to albums_path, class: "portfolio-box" do %>
        <div class="image">
          <%= image_tag artist.image, class: "img-responsive", alt: artist.name %>
        </div>
        <div class="portfolio-box-caption">
          <div class="portfolio-box-caption-content">
            <div class="project-category text-faded">
              <p><%= artist.name %></p>
              <!-- FIXME: link_toをネストすると、portfolio-boxクラスから抜けて表示されるようになる -->
              <%= icon('fab', 'spotify') %>
              <%#= link_to icon('fab', 'spotify'), artist.external_urls %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
