.review
  .user[style="margin:10px 0;"]
    span[style="margin-right:10px;"]
      = link_to image_tag(review.user.avatar.thumb, class: 'img-circle'), user_path(review.user)
    = review.user.name
  |  <div class="star-rating" style="display:inline; margin-right:10px;" data-score= 
  = review.rating
  |  >
span
  = review.created_at.strftime(" %Y %b %d")
.review-comment[style="display:block; margin-top:10px;"]
  p[style="font-size:16px; margin-right:10px;"]
    = review.title
  = simple_format(review.text)
- if current_user?(user: review.user)
  .review-links[style="padding-bottom:20px;"]
    span[style="float:right;"]
      |  <a href="#" data-toggle="modal" data-target="#myModal-
      = review.id
      | ">Edit
      |  / 
      = link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' }
= render 'reviews/edit_modal', review: review
