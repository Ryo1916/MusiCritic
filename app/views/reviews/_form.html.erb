<div class="form-group">
  <%= form_with(model: review, local: true, url: reviews_path) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, id: :review_title, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :text %>
      <%= form.text_area :text, id: :review_text, class: "form-control", style: "height:100px;" %>
    </div>

    <div class="field">
      <%= form.label :rating %>
      <div id="star-rating"></div>
    </div>

    <div class="field">
      <%= form.hidden_field :user_id, id: :review_user_id, value: current_user.id, class: "form-control" %>
      <%= form.hidden_field :album_id, id: :review_album_id, value: @album.id, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <script>
    $('#star-rating').raty({
      path: '/assets/',
      half: true,
      size: 6,
      scoreName: 'review[rating]'
    });
  </script>

</div>
