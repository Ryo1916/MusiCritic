<%= form_with(model: review, local: true, class: 'review') do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, id: :review_title, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :text %>
      <%= form.text_area :text, id: :review_text, class: "form-control", style: "height:200px;" %>
    </div>

    <div class="field" id="star-rating-<%= id %>">
      <%= form.label :rating %>
      <%= form.hidden_field :rating, id: :review_rating %>
    </div>

    <div class="field">
      <%= form.hidden_field :user_id, id: :review_user_id, value: current_user.id, class: "form-control" %>
      <%= form.hidden_field :album_id, id: :review_album_id, value: album.id, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<script>
  $('#star-rating-<%= id %>').raty({
    path: '/assets/',
    half: true,
    size: 6,
    scoreName: 'review[rating]'
  });
</script>
