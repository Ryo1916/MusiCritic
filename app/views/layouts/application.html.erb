<!DOCTYPE html>
<html>
  <head>
    <title> <%= page_title %> </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag asset_path('drum-set-silhouette-512-246168.png'), :rel => 'icon', :type => 'image/png' %>
  </head>

  <body>
    <%= render partial: "creatives/navbar" %>
    <% unless notice.blank? %>
      <p class="notice alert alert-success" role="alert" style="text-align:center; margin-top:50px;"><%= notice %></p>
    <% end %>
    <% unless alert.blank? %>
      <p class="alert alert-danger" role="alert" style="text-align:center; margin-top:50px;"><%= alert %></p>
    <% end %>

    <div class="container" style="margin-top:50px;">
      <%= yield %>
    </div>

    <%= render partial: "creatives/footer" %>
  </body>
</html>
